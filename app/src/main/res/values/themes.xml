<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="Theme.NoActionBar">
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@color/line</item>
        <item name="android:dividerHeight">1px</item>
        <!--  TopBar 的style -->
        <item name="topBarStyle">@style/AppTheme.Widget.TopBar</item>
        <item name="editTextProStyle">@style/AppTheme.Widget.EditTextPro</item>
        <item name="textViewProStyle">@style/AppTheme.Widget.TextViewPro</item>
    </style>


    <!-- 现在App的Theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:overScrollMode">never</item>
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>
</resources>